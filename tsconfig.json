{
  "compilerOptions": {
    "rootDir" : "src/app",
    "target": "es2015",
    "module": "system",
    "baseUrl": "./src/app",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "jsx": "react",
    "types": [
      "electron", "react", "react-dom", "cheerio"
    ]
  },
  "exclude": [
    "node_modules",
    "_ignore",
    ".vscode",
    "build",
    "dist",
    "packaged"
  ]
}